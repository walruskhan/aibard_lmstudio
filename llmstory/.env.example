# Environment Configuration for LLM Story Application
# Copy this file to .env.local or .env.production for environment-specific settings

# Application Environment
ENVIRONMENT=development
DEBUG=true

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production-please
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# LMStudio Configuration
LMSTUDIO_API_HOST=localhost:1234

# Database Configuration (for future use)
DATABASE_URL=sqlite:///llmstory.db
DATABASE_ECHO=false

# API Configuration
API_VERSION=1.0.0
API_TITLE=LLM Story API
API_DESCRIPTION=API for LLM Story application with dependency injection

# External Services (examples)
# OPENAI_API_KEY=your-openai-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Email Configuration (for contact form)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@llmstory.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
RATE_LIMIT_PER_MINUTE=60
JWT_SECRET_KEY=jwt-secret-key-change-in-production

# Feature Flags
ENABLE_CONTACT_EMAIL=false
ENABLE_STORY_ANALYTICS=true
ENABLE_API_DOCS=true
ENABLE_HEALTH_DETAILED=true

# Performance Configuration
MAX_CONTENT_LENGTH=16777216
REQUEST_TIMEOUT=30

# Development Settings
RELOAD_ON_CHANGE=true
TEMPLATES_AUTO_RELOAD=true
SEND_FILE_MAX_AGE_DEFAULT=0